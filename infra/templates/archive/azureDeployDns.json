{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "zoneName": {
            "type": "string",
            "defaultValue": "kainiindustries.net",
            "metadata": {
                "description": "The name of the DNS zone to be created.  Must have at least 2 segements, e.g. hostname.org"
            }
        },
        "ingressExternalIpAddress": {
            "type": "string",
            "metadata": {
                "description": "The External IP Address of the Kubernetes Ingress Controller"
            }
        },
        "newRecordName": {
            "type": "string",
            "defaultValue": "goshop-dev",
            "metadata": {
                "description": "The name of the DNS record to be created.  The name is relative to the zone, not the FQDN."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/dnszones",
            "name": "[parameters('zoneName')]",
            "apiVersion": "2016-04-01",
            "location": "global",
            "properties": {}
        },
        {
            "type": "Microsoft.Network/dnszones/a",
            "name": "[concat(parameters('zoneName'), '/', parameters('newRecordName'))]",
            "apiVersion": "2016-04-01",
            "location": "global",
            "dependsOn": [
                "[parameters('zoneName')]"
            ],
            "properties": {
                "TTL": 3600,
                "ARecords": [
                    {
                        "ipv4Address": "[parameters('ingressExternalIpAddress')]"
                    }
                ]
            }
        }
    ],
    "outputs": {
        "nameServers": {
            "type": "array",
            "value": "[reference(parameters('zoneName')).nameServers]"
        }
    }
}